{
  "bsonType": "object",
  "description": "用户购物车表（无变体版）",
  "required": ["uid", "goodsId", "quantity"],
  "permission": {
    "read": "doc.uid == auth.uid",
    "create": "true",
    "update": "doc.uid == auth.uid",
    "delete": "doc.uid == auth.uid"
  },
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "uid": {
      "bsonType": "string",
      "description": "用户ID",
      "index": true
    },
    "goodsId": {
      "bsonType": "string",
      "description": "商品ID",
      "index": true
    },
    "quantity": {
      "bsonType": "int",
      "description": "商品数量",
      "minimum": 1
    },
    "is_selected": {
      "bsonType": "bool",
      "description": "是否选中",
      "defaultValue": true
    },
    "create_time": {
      "bsonType": "timestamp",
      "description": "创建时间"
    },
    "update_time": {
      "bsonType": "timestamp",
      "description": "更新时间"
    }
  }
}